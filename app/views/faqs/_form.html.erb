
<%= simple_form_for @faq, :html => { :class => 'form-horizontal col-sm-offset-1 col-sm-10' } do |f| %>

  <%= f.input :title,:label=>"The Question:", :input_html => { :class => "enroll_input span3"}  %>  <%= error_span(@faq[:title]) %>
  <%= f.input :user_id, as: :hidden, :input_html => { :value =>  current_user.id} %>
 
  <% if policy(Faq).admin? %>
  <%= f.input :admin, :label=>"Admins Only", :hint=>'Only For System Admins' %>
   <%= error_span(@faq[:admin]) %>
  <% end %>
   <%= f.input :editor, :label=>"Editors Only", as: :boolean, :hint=>' Make this Question Only Visible to Editors ' %> <%= error_span(@faq[:editor]) %>
  <%= f.input :member_only, :label=>"Members Only", :hint=>'Only Members can be see' %>
   <%= error_span(@faq[:member_only]) %>
		  
		  
		  
 	<%= f.input :the_answer , :label=>'The Answer of the Question :', :input_html => { :class => "enroll_input", :rows => 9} %>
 <%= error_span(@faq[:the_answer]) %>
 
  <%= render :partial => 'layouts/markdown'%>
 
  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                faqs_path, :class => 'btn btn-default' %>
<% end %>
