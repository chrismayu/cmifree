<%= simple_form_for @event_submission, :html => { :class => 'form-horizontal' } do |f| %>
  
  
    <%= f.input :email_address, :label=>"Your Email:", :placeholder=>"Your Email", :input_html => { :class => "enroll_input col-xs-4"}, :required => true   %>
  
  <%= error_span(@event_submission[:email_address]) %>
   <%= f.input :full_name, :label=>"Your Name:", :placeholder=>"Your Name", :input_html => { :class => "enroll_input col-xs-4 "}, :required => true   %>
  <%= error_span(@event_submission[:full_name]) %>

   <%= f.input :event_name, :label=>"Event Name:", :placeholder=>"Event Name", :input_html => { :class => "enroll_input col-xs-4 "}, :required => true   %>
   
  <%= error_span(@event_submission[:event_name]) %>
  
 
     <%= f.input :event_description , :label=>"Event Description :", :placeholder=>"Event Description ", :input_html => { :class => "enroll_input col-xs-4 "}, :required => true   %>
  <%= error_span(@event_submission[:event_description]) %>
  <%= f.input :event_date, :label=>"Date* (mm/dd/yyyy):"  %>
  <%= error_span(@event_submission[:event_date]) %>
  <%= f.input :start_time, :label=>"Event Start Time:*" %>
  <%= error_span(@event_submission[:start_time]) %>
  <%= f.input :end_time, :label=>"Event End Time:*"  %>
  <%= error_span(@event_submission[:end_time]) %>
  <%= f.input :taking_place, :label=>"Where will your event be taking place?" , :prompt=>["Please Select" ],:collection=>[ ['At Our Church', 'At Our Church' ], ['Somewhere Else..', 'Somewhere Else..' ]  ],  :input_html => { :class => "enroll_input col-xs-1 "}%>
  
  <%= error_span(@event_submission[:taking_place]) %>
  <%= f.input :taking_place_where , :label=>"In which room is your event?"%>
  <%= error_span(@event_submission[:taking_place_where]) %>
 
   <%= f.input :registration_required,  :as => :radio_buttons, :label=>"Is registration required?*"  %>
  <%= error_span(@event_submission[:registration_required]) %>
  
  
 

  <%= f.button :submit, "Submit your Event", :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                root_path, :class => 'btn btn-default' %>
<% end %>
