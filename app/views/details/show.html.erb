<%- model_class = Detail -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:church_name) %>:</strong></dt>
  <dd><%= @detail.church_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:event_name) %>:</strong></dt>
  <dd><%= @detail.event_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @detail.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:top_comment) %>:</strong></dt>
  <dd><%= @detail.top_comment %></dd>
  <dt><strong><%= model_class.human_attribute_name(:notes) %>:</strong></dt>
  <dd><%= @detail.notes %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @detail.user_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:premium) %>:</strong></dt>
  <dd><%= @detail.premium %></dd>
  <dt><strong><%= model_class.human_attribute_name(:image_data) %>:</strong></dt>
  <dd><%= @detail.image_data %></dd>
  <dt><strong><%= model_class.human_attribute_name(:remove_date) %>:</strong></dt>
  <dd><%= @detail.remove_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:disable) %>:</strong></dt>
  <dd><%= @detail.disable %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              details_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_detail_path(@detail), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              detail_path(@detail),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
