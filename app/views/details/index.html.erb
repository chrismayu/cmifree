<%- model_class = Detail -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:church_name) %></th>
      <th><%= model_class.human_attribute_name(:event_name) %></th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:top_comment) %></th>
      <th><%= model_class.human_attribute_name(:notes) %></th>
      <th><%= model_class.human_attribute_name(:user_id) %></th>
      <th><%= model_class.human_attribute_name(:premium) %></th>
      <th><%= model_class.human_attribute_name(:image_data) %></th>
      <th><%= model_class.human_attribute_name(:remove_date) %></th>
      <th><%= model_class.human_attribute_name(:disable) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @details.each do |detail| %>
      <tr>
        <td><%= link_to detail.id, detail_path(detail) %></td>
        <td><%= detail.church_name %></td>
        <td><%= detail.event_name %></td>
        <td><%= detail.title %></td>
        <td><%= detail.top_comment %></td>
        <td><%= detail.notes %></td>
        <td><%= detail.user_id %></td>
        <td><%= detail.premium %></td>
        <td><%= detail.image_data %></td>
        <td><%= detail.remove_date %></td>
        <td><%= detail.disable %></td>
        <td><%=l detail.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_detail_path(detail), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      detail_path(detail),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_detail_path,
            :class => 'btn btn-primary' %>
